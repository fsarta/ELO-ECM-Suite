{
  "name": "ecm-local-suite",
  "version": "0.1.0",
  "private": true,
  "description": "ECM Local Suite v2 desktop-native monorepo bootstrap",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:ui": "pnpm --filter @ecm/ui dev",
    "dev:api": "pnpm --filter @ecm/api dev",
    "dev:desktop": "pnpm --filter @ecm/desktop tauri:dev",
    "build": "turbo run build",
    "build:ui": "pnpm --filter @ecm/ui build",
    "build:api": "pnpm --filter @ecm/api build",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test"
  },
  "devDependencies": {
    "turbo": "^2.5.0",
    "typescript": "^5.8.2"
  },
  "packageManager": "pnpm@8.15.8"
}
